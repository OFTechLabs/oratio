{
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom"
    ],
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "sourceMap": false,
    "declaration": true,
    "outDir": "dist",
    "removeComments": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "@types/node"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "files": [
    "typings.d.ts",
    "node_modules/@types/mathjs/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
